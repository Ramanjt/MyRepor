@model IEnumerable<MyRepor.Core.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>

@foreach (var item in Model)
{
    <div class="col-md-4" style="height:450px; padding:10px; margin:10px; border:solid thin whitesmoke">
        <div class="col-md-12">
            <img src="~/Content/ProductImages/@item.Image" style="height:250px" class="img-responsive">
        </div>
        <div class="col-md-12">
              <strong>@Html.ActionLink(item.Name,"Details", new { id=item.Id})</strong>
        </div>
        <div class="col-md-12">
            <h4>@item.Description</h4>
        </div>
        <div class="col-md-12">
            <h4>@item.Price</h4>
        </div>
        <div class="col-md-12">
            <a href="#" class="btn btn-default">Add to Basket</a>
        </div>
    </div>
}

<div class="col-md-12 clearfix"></div>
